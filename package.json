{
  "name": "litterarum-api",
  "version": "0.0.1",
  "description": "Litterarum's API",
  "main": "dist/src/server.js",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --exit-child --files -r tsconfig-paths/register ./src/server.ts",
    "clean": "rimraf dist",
    "compile": "tsc && tsc-alias ",
    "copy-files": "copyfiles public/* dist",
    "build": "npm run clean && npm run compile && npm run copy-files",
    "start": "node .",
    "test": "cross-env NODE_ENV=test jest --coverage --testTimeout=10000",
    "format": "prettier --write {**/,}*.js",
    "format:check": "prettier --check {**/,}*.js",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "author": "Royer Gomez",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.12.0",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "lodash": "^4.17.21",
    "mongodb": "^6.5.0",
    "mongoose": "^8.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "rimraf": "^5.0.5",
    "webdav": "^4.11.3",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/passport": "^1.0.16",
    "@types/passport-http": "^0.3.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "express-rate-limit": "^7.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "semantic-release": "^23.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
